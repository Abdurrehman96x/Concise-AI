{
  "manifest_version": 3,
  "name": "Concise AI",
  "version": "1.0",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo_3.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "privacy_policy": "privacy.html",
  "web_accessible_resources": [
    {
      "resources": ["logo_on_pdf.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
